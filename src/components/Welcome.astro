---
import BoxedContainer from "./BoxedContainer.astro";
import Button from "./Button.astro";
---

<section>
  <BoxedContainer>
    <p>BLAZING SPEED: 297,450 TRANSACTIONS PER SECOND (TPS)</p>
  </BoxedContainer>
  <div>
    <img src="/boxes.webp" alt="image of boxes" />
    <div>
      <span>+</span>
      <span>+</span>
      <span>+</span>
      <span>+</span>
      <span>+</span>
      <span>+</span>
    </div>
  </div>
</section>
<BoxedContainer width="100%" padding="2rem 0" margin="2rem 0">
  <h1>
    <span>welcome</span>
    <span>to</span>
    <span>the next</span>
    <span>level</span>
    <span>of</span>
    <span>web3 innovation</span>
  </h1>
</BoxedContainer>
<BoxedContainer padding="1rem 2rem" margin="2rem 0" width="100%">
  <p>
    HIGH-SPEED, HIGH-TPS BLOCKCHAIN ECOSYSTEM WITH SEAMLESS CROSS-CHAIN
    COMMUNICATION. UNITES ALL CHAINS. EMPOWERS DEVELOPERS.
  </p>
</BoxedContainer>
<section>
  <div>
    <div class="left">
      <span>+</span>
      <span>+</span>
      <span>+</span>
      <span>+</span>
      <span>+</span>
      <span>+</span>
    </div>
  </div>
  <div class="buttons">
    <Button title="[get_started]" url="" bg />
    <Button title="[how_it_works]" url="" bg={false} />
  </div>
</section>

<style>
  section {
    display: flex;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
    p {
      line-height: 2;
    }
    div {
      display: flex;
      align-items: center;
      img {
        width: 80px;
      }
      div {
        margin-left: 1rem;
        display: flex;
        flex-wrap: wrap;
        line-height: 1;
        width: 5ch;
        justify-content: end;
      }
      div.left {
        margin-left: 0;
        justify-content: start;
      }
      span:nth-child(even) {
        color: rgba(0, 0, 0, 0.5);
      }
    }
  }
  h1 {
    text-transform: uppercase;
    font-weight: bolder;
    font-size: clamp(2rem, 5vw, 3.2rem);
    line-height: 1.6;
    text-align: center;
    text-wrap: balance;
    font-family: "Poppins";
    span {
      background-color: #000;
      color: #fff;
    }
  }
  p {
    text-wrap: pretty;
  }
  .buttons {
    display: flex;
    flex-direction: column;
    align-items: end;
    gap: 0.5rem;
    @media (width > 400px) {
      flex-direction: row;
      align-items: center;
    }
  }
</style>
